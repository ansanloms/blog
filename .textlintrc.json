{
  "filters": {
    "comments": true
  },
  "rules": {
    // https://github.com/textlint-ja/textlint-rule-no-synonyms
    "@textlint-ja/no-synonyms": true,
    // https://github.com/textlint-ja/textlint-rule-preset-ja-spacing
    "preset-ja-spacing": true,
    // https://github.com/textlint-ja/textlint-rule-preset-ja-spacing/issues/8
    "ja-spacing/ja-space-between-half-and-full-width": {
      // 全角半角間にスペースを空ける
      "space": "always"
    },
    // https://github.com/textlint-ja/textlint-rule-preset-ja-technical-writing
    "preset-ja-technical-writing": true,
    // https://github.com/azu/textlint-rule-spellcheck-tech-word
    "spellcheck-tech-word": true,
    // https://github.com/textlint-ja/textlint-rule-no-mix-dearu-desumasu
    "no-mix-dearu-desumasu": {
      // 本文(Body)
      "preferInHeader": "ですます",
      // 見出し(Header)
      "preferInBody": "ですます",
      // 箇条書き(List)
      "preferInList": "ですます",
      // 文末以外でも敬体(ですます調)と常体(である調)を厳しくチェックするかどうか
      "strict": true
    },
    // 連続できる最大の漢字長
    "ja-technical-writing/max-kanji-continuous-len": {
      "max": 15
    },
    // 文の長さ
    "ja-technical-writing/sentence-length": {
      "max": 200
    }
  }
}

