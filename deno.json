{
  "lint": {
    "files": {
      "exclude": [
        "README.md",
        "articles/"
      ]
    }
  },
  "fmt": {
    "files": {
      "exclude": [
        "README.md",
        "articles/"
      ]
    }
  },
  "imports": {
    "lume/": "https://deno.land/x/lume@v1.19.3/",
    "std/": "https://deno.land/std@0.206.0/",
    "plantuml-encoder": "npm:plantuml-encoder@1.4.0",
    "gray-matter": "npm:gray-matter@4.0.3",
    "textlint": "npm:textlint@13.4.0"
  },
  "tasks": {
    "lint": "deno lint && deno task lint:textlint",
    "lint:textlint": "deno run --allow-env --allow-read --allow-sys textlint.ts .",
    "fix": "deno fmt && deno task fix:textlint",
    "fix:textlint": "deno run --allow-env --allow-read --allow-write --allow-sys textlint.ts . --fix",
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "npm:preact@10.19.1"
  }
}
