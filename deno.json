{
  "lint": {
    "files": {
      "exclude": [
        "README.md",
        "articles/"
      ]
    }
  },
  "fmt": {
    "files": {
      "exclude": [
        "README.md",
        "articles/"
      ]
    }
  },
  "importMap": "import_map.json",
  "tasks": {
    "lume": "echo \"import 'lume/cli.ts'\" | deno run --unstable -A -",
    "build": "deno task lume",
    "serve": "deno task lume -s"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  }
}
